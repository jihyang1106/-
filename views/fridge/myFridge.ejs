<%-include('../main/head.ejs') %>
    <link href="/static/css/fridge/myFridge.css" rel="stylesheet" type="text/css">
    <script src="/static/script/fridge/myFridgeAdd.js" type="text/javascript"></script>
    <script src="/static/script/fridge/myFridgeUpdate.js" type="text/javascript"></script>
    <script src="/static/script/fridge/myFridgeRecipe.js" type="text/javascript"></script>

<%-include('../main/header.ejs') %>
<main>
    <div class="container-xl myFridgePage_main">
      
        <div class="cotainer-fluid myFridgePage_box">
            <div class="myFridge_title pt-3 pb-3">
                나의 냉장고
            </div>
            
            <div class="row top_row">

                <!-- 냉장고 내부 식재료 리스트 -->
                <div class="fridge_box col-8">
                    <form class="fridge_ingd_box" id="frozen_form" name="frozen">
                        <h3>냉동실</h3>
                        <%for(let i=0; i<frozen_list.length; i++){%>
                            <div>
                                
                                <label for="<%=frozen_list[i].frozen_name%>"><%=frozen_list[i].frozen_name%></label><br>
                                <input type="checkbox" name="ingd" value="<%=frozen_list[i].frozen_name%>" id="<%=frozen_list[i].frozen_name%>" onclick="addToList(this);"><br>
                                <input type="range" value="<%=frozen_list[i].frozen_range%>" step="50" disabled><br><p><%=frozen_list[i].frozen_date%></p>
                                <button type="button" class="d_none updateIngd_btn" value="<%=frozen_list[i].frozen_name%>" onclick="clickUpdate(this);">수정</button>
                                <button type="button" class="d_none deleteIngd_btn" value="<%=frozen_list[i].frozen_name%>" onclick="clickDelete(this);">삭제</button>
                            </div>
                        <%}%>                                                   
                    </form>
                    
                    <form class="fridge_ingd_box mt-1" id="fresh_form" name="fresh">
                        <h3>냉장실</h3>
                            <%for(let j=0; j<fresh_list.length; j++){%>
                                <div>
                                    <input type="checkbox" name="ingd" value="<%=fresh_list[j].fresh_name%>" id="<%=fresh_list[j].fresh_name%>" onclick="addToList(this);"><br>
                                    <label for="<%=fresh_list[j].fresh_name%>"><%=fresh_list[j].fresh_name%></label><br>
                                    <input type="range" value="<%=fresh_list[j].fresh_range%>" step="50" disabled><br><p><%=fresh_list[j].fresh_expire%></p>
                                    <button type="button" class="d_none updateIngd_btn" value="<%=fresh_list[j].fresh_name%>" onclick="clickUpdate(this);">수정</button>
                                    <button type="button" class="d_none deleteIngd_btn" value="<%=fresh_list[j].fresh_name%>" onclick="clickDelete(this);">삭제</button>
                                </div>
                            <%}%>                                                   
                    </form>
                </div>

                <!-- 선택한 장바구니 식재료 리스트 -->
                <div class="basket_box col-4">
                    <div class="basket_img_box">
                        <div>
                            <img src="/static/img/basket.png" class="w-50" alt="This is a cart image">
                            <div class="basket_text">먼저, 식재료를 클릭해서 담아주세요</div>
                            <i class="bi bi-chevron-double-down" id="basketArrow"></i>
                            <i class="bi bi-exclamation-triangle-fill hidden" id="basketWarn"></i>
                            <div class="warn_text d_none">식재료 이름을 잘못 입력한 경우,<br>제거 후 다시 보관해주세요</div>
                        </div>
                    </div>
                    <div id="basket_ingd_box">
                    </div>
                </div>
            </div>
        <!-- 하단 btn -->
            <div class="row bottom_row pt-5 pb-5">
                <div class="fridge_btn_box col-8">
                    <button type="button" class="addIngd_btn me-3" id="fresh" onclick="checkFresh();">냉장실에<br>보관하기</button>
                    <button type="button" class="addIngd_btn" id="frozen" onclick="checkFrozen();">냉동실에<br>보관하기</button>        
                    <button type="button" class="showUpdate_btn ms-3" id="showUpdateBtns" onclick="showUpdateBtns();">변경/삭제</button>
                    <button type="button" class="updateIngd_btn d_none" id="cancelUpdate" onclick="cancelUpdate();">변경 취소</button>                       
                    <button type="button" class="updateIngd_btn d_none" id="updateFinish" onclick="finishUpdate();">변경 완료</button>                       
                </div>
                <div class="recipe_btn_box col-4">
                    <button type="button" class="resultRecipe_btn" id="resultRecipe" onclick="resultRecipe();">레시피 확인하기</button>
                </div> 
            </div>                          
        </div>
    </div>

    <script>
       
    </script>
</main>
<%-include('../main/footer.ejs') %>
