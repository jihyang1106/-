<%-include('../main/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/static/css/user/myPageBasic.css">
<link rel="stylesheet" type="text/css" href="/static/css/user/wishList.css">
<script type="text/javascript" src="/static/script/user/myPagebasic.js"></script>
<script type="text/javascript" src="/static/script/user/wishList.js"></script>
<%-include('../main/header.ejs') %>
<main>
    <%-include('myPageBasic.ejs')%>
    <div id="wishlist_box" class="container">
        <p id="box_title"><span><%=user_name%>님</span>의 찜리스트</p>
        <div id="wishlist_card_box">
            <div id="wishlist_card_box_child">
                <% if (rec_like.length == 0 ) { %>
                    <div id="none_box">
                        <img src="/static/img/wishlist_none.png">
                    </div>
                <% } else { %>
                    <% for (var i=0 ; i<rec_like.length ; i++ ) { %>
                        <div id="card_size" class="card mb-4 me-3">
                            <img src="<%=rec_like[i].recipe.recipe_img%>" class="card-img" alt="...">
                            <div id="card_hover" class="card-img-overlay">
                                <i id="heart_icon" class="bi bi-heart-fill" type="button" onclick="wishlist_del('<%=rec_like[i].recipe.recipe_id%>',this)"></i>
                                <div id="card_text_box">
                                    <h3 id="card_text" class="card-title"><%=rec_like[i].recipe.recipe_title%></h3>
                                    <h5 id="card_text" class="card-text" type="button" onclick="location.href='<%=rec_like[i].recipe.recipe_url%>'" target="_blank">레시피 보기</h5>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
        <nav aria-label="Page navigation">
            <ul id="js-pagination" class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</main>
<%-include('../main/footer.ejs') %>