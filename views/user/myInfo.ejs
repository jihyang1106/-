<%-include('../main/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/static/css/user/myPageBasic.css">
<link rel="stylesheet" type="text/css" href="/static/css/user/myInfo.css">
<script type="text/javascript" src="/static/script/user/myInfo.js"></script>
<%-include('../main/header.ejs') %>
<main>
    <div id="mypage_nav" class="container-fluid">
        <div id="mypage_nav_textbox">
            <span type="button" onclick="location.href='/myPage'">나의 프로필 </span><span> | </span>
            <span type="button" onclick="location.href='/myPage/wishList'">  찜리스트 </span><span> | </span>
            <span type="button" onclick="location.href='/myPage/myInfo'"> 회원정보수정</span>
        </div>
    </div>
    <div id="inform_box" class="container">
        <p><span>김새싹님</span>의 회원정보</p>
        <form id="form_hidden" action="/myPage/profile/myInfoDel" method="post">
            <input type="hidden" name="user_id" value="<%=user_id%>">
        </form>
        <form id="form_info">
            <div class="input-group input-group-lg">
                <p>이메일: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_id" value="<%=user_id%>" readonly>
                <p>현재 비밀번호: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_pw_now" value="<%=user_pw%>" readonly>
                <p>새 비밀번호: </p>
                <input type="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_pw_new">
                <p>비밀번호 확인: </p>
                <input type="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_pw_check">
                <p>이름: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_name" value="<%=user_name%>">
                <p>핸드폰 번호: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_phone" value="<%=user_phone%>">
            </div>
            <button type="button" id="button_del" class="btn" onclick="info_del()">회원탈퇴</button>
            <button type="button" id="button2" class="btn me-2" onclick="info_update()">수정완료</button>
            <p style=clear:both;></p>
        </form>
    </div>
    <div class="mt-5"></div>
</main>
<%-include('../main/footer.ejs') %>