<%-include('../main/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/static/css/user/myPageBasic.css">
<link rel="stylesheet" type="text/css" href="/static/css/user/myPage.css">
<link rel="stylesheet" type="text/css" href="path/to/chartjs/dist/Chart.min.css">
<script type="text/javascript" src="/static/script/user/myPagebasic.js"></script>
<script type="text/javascript" src="/static/script/user/myPage.js"></script>
<%-include('../main/header.ejs') %>
<main>
    <%-include('myPageBasic.ejs')%>
    <form id="form_hidden">
        <input type="hidden" name="fresh_category" value="<%=fresh_category%>">
        <input type="hidden" name="cook_tag" value="<%=cook_tag%>">
    </form>
    <div class="container">
        <div id="chart_box">
            <p id="box_title"><span>김새싹님</span>의 통계차트</p>
            <div id="chart_box_child">
                <div id="chart_1">
                    <p>냉장실 재료 카테고리별 차트</p>
                    <canvas id="myChart" width="550px;"></canvas>
                </div>
                <div id="chart_2">
                    <p>최근에 한 요리 카테고리별 차트(10개)</p>
                    <canvas id="myChart2" width="650px;" height="599.99px;"></canvas>
                </div>
            </div>
        </div>
        <hr>
        <div id="recipe_box">
            <p id="box_title"><span>김새싹님</span>의 레시피</p>
            <div id="recent_recipe_box">
                <div id="recent_recipe_title_img">
                    <div id="recent_recipe_title_text">
                        <span>최근 본</span>
                        <span>레시피</span>
                    </div>
                </div>
                <div class="container" id="recent_recipe_card_box">
                    <div class="row">
                        <% for (var i=0 ; i<4 ; i++ ) { %>
                            <div id="recent_recipe_card" class="card col-5" style="padding:0px;">
                                <img src="<%=recipe_img[i]%>" class="card-img" style="width:100%; height: 100%;"alt="...">
                                <a href="<%=recipe_url[i]%>" target="_blank" id="recipe_name" class="card-link card-img-overlay"><%=recipe_title[i]%></a>                                
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div id="recent_cook_box">
                <div id="recent_cook_title_img">
                    <div id="recent_cook_title_text">
                        <span>최근에</span>
                        <span>한 요리</span>
                    </div>
                </div>
                <div class="container" id="recent_cook_card_box">
                    <div class="row">
                        <% for (var i=0 ; i<4 ; i++ ) { %>
                            <div id="recent_recipe_card" class="card col-5" style="padding:0px;">
                                <img src="<%=cook_img[i]%>" class="card-img" style="width:100%; height: 100%;"alt="...">
                                <a href="<%=cook_url[i]%>" id="recipe_name" class="card-link card-img-overlay" target="_blank"><%=cook_title[i]%></a>                                
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-5"></div>
    </div>
</main>
<%-include('../main/footer.ejs') %>