<%-include('../main/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/static/css/user/myPageBasic.css">
<link rel="stylesheet" type="text/css" href="/static/css/user/myInformation.css">
<script type="text/javascript" src="/static/script/user/myInformation.js"></script>
<%-include('../main/header.ejs') %>
<main>
    <div class="container">
        <div id="mypage_nav" class="container-fluid">
            <div id="mypage_nav_textbox">
                <span>나의 프로필 |</span>
                <span> 찜리스트 |</span>
                <span> 회원정보수정</span>
            </div>
        </div>
        <form id="form_info">
            <div class="input-group input-group-lg">
                <p>이메일: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_id" value="<%=user_id%>" readonly>
                <p>비밀번호: </p>
                <input type="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_pw">
                <p>이름: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_name" value="<%=user_name%>">
                <p>핸드폰 번호: </p>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="user_phone" value="<%=user_phone%>">
            </div>
            <button type="button" id="button2" class="btn" onclick="">수정완료</button>
            <p style=clear:both;></p>
        </form>
    </div>
    <div class="mt-5"></div>
</main>
<%-include('../main/footer.ejs') %>