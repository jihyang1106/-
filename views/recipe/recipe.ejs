<%-include('../main/head.ejs') %>
<link href="static/css/recipe/recipe.css" rel="stylesheet">
<script src="static/script/recipe/recipe.js"></script>
<%-include('../main/header.ejs') %>

<div class="container-fluid" id="filter">
    <div class="container" id="filter_box">
      <button class="btn filter">반찬</button>
      <button class="btn filter">밥</button>
      <button class="btn filter">국/탕</button>
      <button class="btn filter">건강/웰빙</button>
      <button class="btn filter">야식</button>
    </div>
</div>
<main>
  <div class="container mt-5 ">
    <div class="row row-cols-2 row-cols-sm-2">
      <%for(var i=0; i<data.length;i++) { %>
        <div class="col-md-3 card_parent">
            <div class="card">
                <div class="img_time">
                    <!--이미지, 시간-->
                    <img src="<%=data[i].recipe_img%>" class="recipe_img img-fluid rounded"> 
                    <div class="card-img-overlay d-flex justify-content-between">
                      <span class="time">
                        <i class="bi bi-alarm"></i>&nbsp;
                        <%=data[i].recipe_time%>
                      </span>
                      <button type="button" class="btn">
                        <h5><i class="bi bi-balloon-heart"></i></h5>
                      </button>
                    </div>
                </div>
                <!--img_time-->
                <div class="name_ingd p-3">
                    <!--레시피이름, 레시피 재료-->
                    <div class="d-flex justify-content-between align-items-center">
                        <h5><%=data[i].recipe_title%></h5>
                    </div>
                    <div class="d-flex justify-content-between align-items-center pt-2">
                        <span>
                          <i class="fas fa-regular fa-bowl-food"></i>&nbsp;
                          <%=data[i].recipe_ingd%>
                        </span> 
                    </div>
                </div>
                <!--name_ingd-->
            </div>
            <!--card-->
            <div class="btn_outer mt-3 mb-3">
                <div class="btn_inner text-center p-1"> 
                  <input type="button" class="btn show_recipe" onclick="insertLog('<%=data[i].recipe_id%>', '<%=data[i].recipe_url%>')" value="레시피보기">
                  <input type="button" class="btn show_cook" value="요리하기">
                </div>
            </div>
            <!--btn_outer-->
        </div>
        <!--col-->
      <% } %>
    </div>
    <!--row-->
  </div>
</main>


<%-include('../main/footer.ejs') %>