  <!-- <div class="row row-cols-2 row-cols-sm-2 row-cols-md-4" style="margin:30px;"></div> -->
  <div class="container mt-5 ">
    <div class="row row-cols-2 row-cols-sm-2">
        <div class="col-md-3 card_parent">
            <div class="card">
                <div class="image_container">
                    <a href="<%=data.recipe_url%>">
                      <img src="<%=data.recipe_img%>" class="img-fluid rounded thumbnail-img"> 
                      <div class="card-img-overlay d-flex justify-content-between">
                        <span><i class="bi bi-alarm"></i>&nbsp;<%=data.recipe_time%></span>
                      </div>
                    </a>
                </div>
                <div class="detail-container p-3">
                    <!--레시피이름-->
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 style="font-weight: bold; font-size:1.1rem;"><%=data.recipe_title%></h5>
                    </div>
                    <div class="d-flex justify-content-between align-items-center pt-2">
                        <span style="font-size:1.1rem;"><i class="fas fa-regular fa-bowl-food"></i>&nbsp;<%=data.recipe_ingd%></span> 
                    </div>
                </div>
            </div>
            <div class="mt-3 mb-3">
                <div class="voutcher-divider">
                    <div class="voutcher-left text-center p-1"> 
                      <button class="btn show_recipe" type="button" style="width:130px; height:50px; font-size:1.2rem; font-weight: bold;">레시피보기</button>
                      <button class="btn show_cook" type="button" style="width:130px; height:50px; font-size:1.2rem; font-weight: bold;">요리하기</button>
                    </div>
                </div>
            </div>
        </div>
        <!--col-->
    </div>
    <!--row-->
  </div>
